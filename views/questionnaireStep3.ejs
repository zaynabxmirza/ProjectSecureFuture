<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Questionnaire - Step 3</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <%- include('partials/userNavbar') %>

  <div class="container mt-5">
    <div class="card shadow p-4" style="max-width: 600px; margin: auto;">
      <h3 class="mb-4 text-center">Step 3: Financial Savings</h3>
      <form action="/questionnaire/savings" method="POST">

        <div class="mb-3">
          <label for="savings" class="form-label">Do you currently have any savings?</label>
          <select class="form-select" name="savings" id="savings">
            <option value="">-- Select --</option>
            <option value="none">No savings</option>
            <option value="under500">Less than £500</option>
            <option value="500to2000">£500 - £2,000</option>
            <option value="over2000">More than £2,000</option>
          </select>
        </div>

        <div class="text-end">
          <a href="/questionnaire/financial-information" class="btn btn-secondary me-2">Back</a>
          <button type="submit" class="btn btn-success">Finish</button>
        </div>
        <div class="text-end mt-4">
          <a href="/user_dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>        
      </form>
    </div>
  </div>
</body>
</html>
