<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Questionnaire - Step 1</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include('partials/userNavbar') %>

    <div class="container mt-5">
        <div class="card shadow p-4" style="max-width: 600px; margin: auto;">
            <h3 class="mb-4 text-center">Step 1: Personal Information</h3>
            <form action="/questionnaire/personal-information" method="POST">
                <div class="mb-3">
                    <label for="age" class="form-label">What is your age?</label>
                    <input type="number" class="form-control" name="age" id="age" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Do you have any dependents?</label>
                    <select class="form-select" name="hasDependents" required>
                        <option value="">-- Select --</option>
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>
                </div>

                <div class="mb-3" id="dependentCountWrapper" style="display: none;">
                    <label class="form-label">How many dependents?</label>
                    <select class="form-select" name="dependents">
                        <option value="">-- Select --</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6+">6+</option>
                    </select>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">Next</button>
                </div>
                <div class="text-end mt-4">
                    <a href="/user_dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
                </div>
                  
            </form>
        </div>
    </div>

    <script>
        const hasDependentsSelect = document.querySelector('select[name="hasDependents"]');
        const dependentCountWrapper = document.getElementById('dependentCountWrapper');

        hasDependentsSelect.addEventListener('change', function () {
            if (this.value === 'yes') {
                dependentCountWrapper.style.display = 'block';
            } else {
                dependentCountWrapper.style.display = 'none';
            }
        });
    </script>
</body>
</html>
