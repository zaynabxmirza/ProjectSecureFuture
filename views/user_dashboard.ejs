<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
<body>        
  <%- include('partials/userNavbar') %>
  <div class="container mt-5">
    <div class="card shadow p-4 bg-light" style="max-width: 800px; margin: auto;">
      <h3 class="mb-3">Welcome back, <%= userforename || "User" %> </h3>

      <p class="lead">Letâ€™s keep building your Secure Future.</p>

      <% if (user.financialPlans && user.financialPlans.length > 0) { %>
        <h5 class="mt-4">Your Previous Plans:</h5>
        <ul class="list-group">
          <% user.financialPlans.forEach(function(plan, index) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Plan from <%= new Date(plan.date).toLocaleDateString() %>
              <a href="/plans/<%= index %>" class="btn btn-sm btn-outline-primary">View</a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No plans generated yet.</p>
      <% } %>

      <div class="d-flex flex-column flex-md-row justify-content-between gap-3 mt-4">
        <a href="/questionnaire/personal-information" class="btn btn-success btn-lg w-100">Start New Plan</a>
        <a href="/plan/summary" class="btn btn-outline-primary btn-lg w-100">View Latest Plan</a>
      </div>

      <hr class="my-4">

      <div class="text-end">
        <a href="/logout" class="btn btn-danger">Log Out</a>
      </div>
    </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>