<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plan Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include("../partials/adminNavbar") %>

<div class="container mt-4">
  <h2 class="mb-4">User Financial Plans</h2>

  <% users.forEach(user => { %>
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-light">
        <h5><%= user.userforename %> <%= user.usersurname %> - <%= user.email %></h5>
      </div>
      <div class="card-body">
        <% if (user.financialPlans.length === 0) { %>
          <p class="text-muted">No plans found.</p>
        <% } else { %>
          <% user.financialPlans.forEach((fp, index) => { %>
            <div class="border rounded p-3 mb-3">
              <h6>Plan <%= index + 1 %> - <%= fp.date.toDateString() %></h6>
              <p><strong>Age:</strong> <%= fp.dataSnapshot.age %></p>
              <p><strong>Income:</strong> Â£<%= fp.dataSnapshot.income %></p>
              <p><strong>Housing:</strong> <%= fp.dataSnapshot.housing %></p>
              <p><strong>Savings:</strong> <%= fp.dataSnapshot.savings %></p>

              <p><strong>Recommendations:</strong></p>
              <ul>
                <% fp.plan.recommendations.forEach(r => { %>
                  <li><%= r %></li>
                <% }) %>
              </ul>

              <p><strong>Next Steps:</strong></p>
              <ul>
                <% fp.plan.nextSteps.forEach(ns => { %>
                  <li><%= ns %></li>
                <% }) %>
              </ul>

              <div class="d-flex gap-2 mt-2">
                <form action="/admin/userplans/delete/<%= user._id %>/<%= index %>" method="POST">
                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                </form>
                <a href="/admin/userplans/update/<%= user._id %>/<%= index %>" class="btn btn-warning btn-sm">Update</a>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
